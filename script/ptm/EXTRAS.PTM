#.ppa.info off
[addon]
name=[extras:name:dlg]
group=[addon:core:dlg]
popup=[extras:name]
author=pai
version=1.01
url=http://www.kristshell.net/pnp/
email=pnp@pairc.com
id=ppextra
ppver=4.22
unload=kstat.save
timers=.lagbar .lagupdate .antiidle .kickstat.flush
hashcid=-last.msg -last.ntc -ezping.* -kstat.recent.*
