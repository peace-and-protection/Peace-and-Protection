alias colorwin {
  if ($active == @ColorWin) { window -c @ColorWin | return }
  _window 2 -pfkz +efLt @ColorWin -1 -1 530 288 @ColorWin
  var %row = 0
  :row
  var %line,%col = 0
  %line =  $+ %row $_cprep(%row) $+ :
