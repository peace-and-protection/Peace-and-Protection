  size -1 -1 140 91

  radio "&[kickstat_dialog:disable]", 1, 5 5 130 11, group
  radio "&[kickstat_dialog:enable]", 2, 5 16 130 11
  radio "&[kickstat_dialog:quiet]", 3, 5 27 130 11

  box "[kickstat_dialog:show_prompt]:", 4, 5 45 75 41, disable
  text "&[kickstat_dialog:kicks]", 6, 42 57 35 11, disable
  edit "", 5, 10 55 30 11, disable
  text "&[kickstat_dialog:bans]", 8, 42 72 35 11, disable
  edit "", 7, 10 70 30 11, disable

  button "[dialog:ok]", 100, 90 55 42 12, ok
  button "[dialog:cancel]", 101, 90 73 42 12, cancel
